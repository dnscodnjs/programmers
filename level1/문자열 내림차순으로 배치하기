import java.util.*;

class Solution {
    public StringBuilder solution(String s) {
    
        List<String> list = new ArrayList<>(Arrays.asList(s.split("")));
        
        Collections.sort(list);
        
        StringBuilder sb = new StringBuilder();
        
        for(String str : list){
            sb.append(str);
        }
        return sb.reverse();
        
    }
}
